<Window x:Class="DiningSolution.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiningSolution.WPF"
        xmlns:views="clr-namespace:DiningSolution.WPF.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        Height="768" Width="1024" 
        Background="{StaticResource MainColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <views:InfoBarView Grid.Row="0"/>
        
        <!-- Vietoje btn padaryti binding i kitus langus-->
        <Button Grid.Row="1" Content="Test" Height="50" Width="100" FontSize="20" FontWeight="Bold"/>
    </Grid>
</Window>
